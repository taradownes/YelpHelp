

<% include ../partials/header  %>

<div class="container" style="max-width: 700px; margin: 0 auto;">
    <div class="row">
        <h1 class="col-md-12" style="padding: 40px">Add new comment to <%= beach.name %>!</h1>
        <form class="col-md-12" action="/beaches/<%= beach._id %>/comments" method="POST">
            <div class="form-group">
              <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
              <button class="btn btn-lg btn-block">Submit!</button>
            </div>
        </form>
    </div>


<a href="/beaches">Go Back</a>
</div>
